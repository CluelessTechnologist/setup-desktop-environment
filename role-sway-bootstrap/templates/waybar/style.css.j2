/* right module */
#clock,
#custom-btc,
#pulseaudio,
#bluetooth,
#network,
#disk,
#memory,
#cpu,
#backlight,
#battery {
  margin: 2px 0px 2px 0px;
  color: @font1;
  padding-left: 8px;
  padding-right: 8px;
  background-color: @bg1;
  border-radius: 8px;
}
#tray,
#custom-run,
#custom-help,
#custom-power {
  border-width: 2px;
  border-color: #cc241d;
  color: @font1;
  background-color: @bg1;
  border-radius: 3px;
  border-style: none none outset none;
  border-left: 1px solid #ffffff;
  border-top: 1px solid #ffffff;
  border-bottom: 1px solid #404040;
  box-shadow: 1px 1px 1px 0px #000000;
  margin: 2px 2px;
}

#workspaces {
  margin: 2px 2px 2px 2px;
  padding: 0px 2px 0px 6px;
  border-radius: 6px;
  background-color: @bg1;
  min-width: 20px;

}

#workspaces button {
  background: @bg1;
  color: @font;
  margin: 2px 3px 2px 3px;
  padding: 0px;
  min-width: 20px;

}

#workspaces button.focused {
  /* color: @ws-clr; */
  /* background: @ws_foc; */
  border-width: 2px;
  border-color: #cc241d;
  color: #ffd77a;
  background-color: #504945;
  border-radius: 3px;
  border-style: none none outset none;
  min-width: 20px;

}

