}

#custom-left_pad {
  border-radius: 8px 0px 0px 8px;
  padding: 0px 2px 0px 2px;
  margin: 2px 0px 2px 2px;
  background-color: @bg1;
}

#custom-right_pad {
  border-radius: 0px 8px 8px 0px;
  padding: 0px 2px 0px 2px;
  margin: 2px 2px 2px 0px;
  background-color: @bg1;
}
#custom-pipe {
  margin-top: 2px;
  margin-bottom: 2px;
  font-size: 16px;
  background-color: @bg1;
  color: @pipe;
}

#custom-power {
  color: #cc241d;
}
