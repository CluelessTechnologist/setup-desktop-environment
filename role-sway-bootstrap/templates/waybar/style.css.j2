{% if theme == 'win95' %}
* {
    padding: 0;
    margin: 0;
    border: none;
    border-radius: 0;
    font-family: "Sans Serif", "Font Awesome 5 Free";
    font-size: 9px;
    min-height: 0;
}
window#waybar {
    padding: 0;
    margin: 0;
    background: #7e7e7e;
    border-bottom: 1px solid @unfocused_borders;
    color: #000000;
}
#workspaces button {
    padding: 0 10px;
    background: #7e7e7e;
    color: #000000; 
    box-shadow: none;

}
#workspaces button:hover {
    box-shadow: 0px 0px 0px;
    text-shadow: none;
}
#workspaces button.focused {
    background: #000080;
    color: #ffffff;
}

#pulseaudio, #memory, #cpu, #disk, #custom-btc, #custom-power, #custom-run, #custom-help, #network, #battery, #backlight {
    padding: 2px 2px;
    margin: 2px 1px;
    background-color: #7e7e7e; 
    color: #000000;
    font-family: "Sans Serif", "Font Awesome 5 Free";
    font-size: 9px;
    border-left: 1px solid #ffffff;
    border-top: 1px solid #ffffff;
    border-bottom: 1px solid #404040;
    box-shadow: 1px 1px 1px 0px #000000;
}
#clock {
    padding: 2px 2px;
    margin: 2px 1px;
    background-color: #7e7e7e; 
    color: #000000;
    font-family: "Sans Serif", "Font Awesome 5 Free";
    font-size: 9px; 
    border: 1px solid #404040; /* Combine all borders into one */
    box-shadow: 1px 1px 0px 0px #000000; /* Adjust box-shadow for a pressed effect */
}
#memory {
    color: #000000
}
#pulseaudio {
    color: #000000
}
#clock {
    color: #000000
}
tooltip {
background: #7e7e7e;
background-color: #7e7e7e;
border: 1px solid #404040; /* Combine all borders into one */
}
tooltip label {
background-color: #7e7e7e;
}
