[global]
    font = Monospace 8
    markup = full
    format = "<b>%a</b>:\n%s\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = center
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes 
    ignore_newline = no
    geometry = "200x5-6+30"
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    startup_notification = false
    frame_width = 6
{% if theme == 'win95' %}
[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#ffffe1"
    foreground = "#000000"
    frame_color = "#010080"
    timeout = 5
    default_icon = ~/.icons/Chicago95-tux/status/symbolic/notification-symbolic.png

[urgency_normal]
    background = "#ffffe1"
    foreground = "#000000"
    frame_color = "#010080"
    timeout = 20
    default_icon = ~/.icons/Chicago95-tux/status/symbolic/notification-new-symbolic.png

[urgency_critical]
    background = "#ffffe1"
    foreground = "#000000"
    frame_color = "#010080"
    timeout = 0
    default_icon = ~/.icons/Chicago95-tux/status/scalable/error.svg
{% elif theme == 'gruvbox' %}
[frame]
    width = 1
    color = "#83a598"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 5

[urgency_normal]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 20

[urgency_critical]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 0
{% endif %}
